<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.yourapp.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <!-- Auth Flow -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.yourapp.ui.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_onboarding"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.yourapp.ui.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_onboarding"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Onboarding -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.yourapp.ui.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <!-- Main Flow -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yourapp.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_doctors"
            app:destination="@id/doctorsFragment" />
        <action
            android:id="@+id/action_main_to_pharmacy"
            app:destination="@id/pharmacyFragment" />
        <action
            android:id="@+id/action_main_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_main_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- Bottom Navigation Destinations -->
    <fragment
        android:id="@+id/doctorsFragment"
        android:name="com.yourapp.ui.doctors.DoctorsFragment"
        android:label="Doctors"
        tools:layout="@layout/fragment_doctors" />

    <fragment
        android:id="@+id/pharmacyFragment"
        android:name="com.yourapp.ui.pharmacy.PharmacyFragment"
        android:label="Pharmacy"
        tools:layout="@layout/fragment_pharmacy" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.yourapp.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.yourapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>
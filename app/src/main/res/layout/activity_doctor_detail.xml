<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doctor Detail"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:40"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Doctor Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Doctor Image -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_doctor_profile"
                    android:layout_marginEnd="16dp" />

                <!-- Doctor Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textDetailDoctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Rishi"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textDetailDoctorSpecialty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chardiologist"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp" />

                    <!-- Rating and Distance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/textDetailRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.7"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginEnd="16dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/textDetailDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="800m away"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipi elit, sed do eiusmod tempor incididunt ut laore et dolore magna aliqua. Ut enim ad minim veniam..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read more"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Calendar Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Dates"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Days of Week -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Mon"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Tue"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Wed"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Thu"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Fri"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Sat"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />
        </GridLayout>

        <!-- Dates -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="21"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="#E3F2FD" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="22"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="23"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="24"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="25"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="26"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp" />
        </GridLayout>

        <!-- Time Slots -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Time Slots"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginBottom="32dp">

            <!-- Time slots will be added programmatically -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="09:00 AM"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="10:00 AM"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="11:00 AM"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_margin="4dp" />

            <!-- Add more time slots as needed -->
        </GridLayout>

        <!-- Book Appointment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBookAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>